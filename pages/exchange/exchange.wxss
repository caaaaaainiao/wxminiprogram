/* pages/exchange.wxss */
/* pages/signIn.wxss */
.container{
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  position: relative;
  overflow: auto;
}

.exchange{
  height: 579rpx;
  width: 100%;
  position: relative;
  top: 0;
  left: 0;
}

.my-creditsAmount{
  color:rgba(0,159,255,1);
  font-size:24rpx;
  position: absolute;
  top: 20rpx;
  left: 20rpx;
}

.exchange-content{
  width: 400rpx;
  height: 430rpx;
  position: absolute;
  left: 50%;
  top: 70rpx;
  transform: translate(-50%);
  color: rgba(136,136,136,1);
  font-size: 24rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-direction: column;
  text-align: center;
}

.get-creditsAmount{
  color:rgba(0,159,255,1);
  font-size:60rpx;
  height: 100rpx;
  line-height: 100rpx;
}

.creditsAmount-rule{
  font-size: 22rpx;
  font-weight:500;
  position: relative;
  width: 100%;
}

.exchange-rule{
  font-size: 20rpx;
  width:80rpx;
  color:rgba(0,159,255,1);
  text-decoration:underline;
  position:absolute;
  right:30rpx;
}

.exchange-mack{
  width:24rpx;
  height:24rpx;
  border:1rpx solid rgba(0,159,255,1);
  border-radius:50%;
  color: rgba(0,159,255,1);
  position:absolute;
  right: 0;
}

.exchange-gold{
  color:rgba(51,51,51,1);
  font-size:40rpx;
  position: relative;
  display: flex;
  align-items: center;
}

.to-exchange{
  width:400rpx;
  height:60rpx;
  background:rgba(0,159,255,1);
  box-shadow:0rpx 6rpx 12rpx 0rpx rgba(0,159,255,0.3);
  border-radius:30rpx;
  color:rgba(255,255,255,1);
  font-size:26rpx;
  line-height: 60rpx;
}

.toDetail{
  text-decoration:underline;
  color:rgba(0,159,255,1);
  font-size:22rpx;
  padding-top: 10rpx;
}

.creditsAmount-line{
  width:360rpx;
  height:1px;
  background:rgba(221,221,221,1);
}

.linetop{
  width:750rpx;
  height:20rpx;
  background:rgba(238,238,238,1);
}

.recommended{
  width: 100%;
  position: relative;
}

.content-data{
  width: 710rpx;
  margin-left: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}

.item{
  width: 345rpx;
  margin-bottom: 20rpx;
  background:rgba(255,255,255,1);
  border:1px solid rgba(224,224,224,1);
  box-shadow:0px 0px 12rpx 0px rgba(0, 0, 0, 0.05);
  border-radius:16rpx;
  display: inline-block;
}

.item-details{
  height: 480rpx;
  margin: 12rpx 13rpx;
  position: relative;
}

.item-img{
   width:320rpx;
   height:320rpx;
   position: relative;
}

.item-name{
  width: 303rpx;
  height: 60rpx;
  font-size: 13px;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(49,41,39,1);
  overflow: hidden;
  line-height: 30rpx;
  position: relative;
  left: 20rpx;
  top: 17rpx;
  text-overflow: ellipsis; 
  display: -webkit-box;
  -webkit-line-clamp: 2; 
  -webkit-box-orient: vertical;
}

.item-price{
  font-size: 10px;
  text-align: left;
  width: 270rpx;
  line-height: 32rpx;
  position: relative;
  left: 23rpx;
  top: 30rpx;
}

.item-price>view{
  float: left;
  color: #DA4E7B;
  font-size: 13px;
}

.item-gold-img{
  width: 22rpx;
  height: 22rpx;
  position: relative;
  bottom: 5rpx;
  right: 4rpx;
}

.old-price{
  position: absolute;
  font-size:11px;
  font-family:PingFang SC;
  font-weight:400;
  text-decoration:line-through;
  color:rgba(147,140,144,1);
  line-height:30rpx;
  bottom: 13rpx;
  right: 20rpx;
}

.item-btn{
  position: absolute;
  width:320rpx;
  height:50rpx;
  background:rgba(236,47,75,1);
  border-radius:10px;
  text-align: center;
  bottom: 13rpx;
  color:rgba(255,255,255,1);
  font-size:12px;
  line-height: 50rpx;
}

.recommended-title{
  height: 100rpx;
  width: 100%;
  text-align: center;
  line-height: 100rpx;
  position: relative;
}

.recommended-title image{
  width: 462rpx;
  height: 19rpx;
  position: absolute;
  left: 144rpx;
  top: 40rpx;
}

.recommended-title text{
  line-height: 56rpx;
}

.line2{
  width:750rpx;
  height:4rpx;
  background:rgba(238,238,238,1);
}

.cardpassword {
  width: 440rpx;
  height: 500rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 8px 16px 0px rgba(23, 42, 63, 0.2);
  border-radius: 20rpx;
  position: fixed;
  left: 20%;
  top: 30%;
}

.cancel {
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}

.lock {
  width: 120rpx;
  height: 85rpx;
  position: absolute;
  top: 55rpx;
  left: 155rpx;
}

.enter {
  width: 360rpx;
  height: 67rpx;
  background: rgba(238, 238, 238, 1);
  border-radius: 4rpx;
  position: absolute;
  top: 240rpx;
  left: 40rpx;
  text-align: center;
}

.line {
  width: 100%;
  height: 1rpx;
  background: rgba(218, 78, 123, 1);
  position: absolute;
  top: 410rpx;
}

.sure {
  width: 100%;
  height: 90rpx;
  position: absolute;
  bottom: 0;
  text-align: center;
  line-height: 80rpx;
  color: #da4e7b;
}