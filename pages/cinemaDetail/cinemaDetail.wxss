/* pages/cinemaDetail.wxss */
.container {
  width: 100%;
  position: relative;
  top: 0;
  left: 0;
}

.cinema-location {
  width: 100%;
  position: relative;
}

.cinema-name {
  width: 100%;
  height: 129rpx;
  line-height: 129rpx;
  font-size:32rpx;
  font-weight:bold;
  color:rgba(49,41,39,1);
  padding-left: 40rpx;
  border-bottom: 1rpx solid rgba(220,220,220,1);
  position: relative;
}

.cinema-address {
  width: 100%;
  height: 129rpx;
  line-height: 129rpx;
  border-bottom: 1rpx solid rgba(220,220,220,1);
  padding-left: 40rpx;
  padding-right: 40rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.cinema-address-left {
  width: 279rpx;
  height: 60rpx;
  font-size:26rpx;
  color:rgba(49,41,39,1);
  line-height: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.cinema-address-right,.cinema-phone-right {
  font-size:20rpx;
  color:rgba(49,41,39,1);
  display: flex;
  align-items: center;
  position: absolute;
  right: 40rpx;
}

.cinema-address-right image,.cinema-phone-right image{
  width:30rpx;
  height:30rpx;
}

.cinema-phone {
  width: 100%;
  height: 129rpx;
  line-height: 129rpx;
  border-bottom: 1rpx solid rgba(220,220,220,1);
  padding-left: 40rpx;
  padding-right: 40rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.cinema-phone-left {
  width: 227rpx;
  font-size:26rpx;
  color:rgba(49,41,39,1);
  line-height: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.line {
  width:100%;
  height:30rpx;
  background:rgba(242,242,242,1);
}

.cinema-serve {
  width: 100%;
  position: relative;
}

.serve-title {
  font-size:30rpx;
  color:rgba(51,51,51,1);
  font-weight:bold;
  padding-top: 30rpx;
  padding-left: 40rpx;
}

.serve-item {
  height: 118rpx;
  border-bottom: 1rpx solid rgba(220,220,220,1);
  padding-left: 40rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.item-title {
  background:rgba(0,159,255,1);
  border-radius:8rpx;
  font-size:24rpx;
  color:rgba(255,255,255,1);
  font-weight:400;
  padding: 6rpx 16rpx;
  max-width: 220rpx;
  white-space: nowrap;
  overflow: hidden;
	text-overflow: ellipsis;
}

.item-content {
  width:406rpx;
  font-size:24rpx;
  color:rgba(51,51,51,1);
  position: absolute;
  right: 40rpx; 
  line-height: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
  text-align: center;
}

.cinema-announcement {
  width: 100%;
  position: relative;
  padding-left: 40rpx;
  padding-right: 40rpx;
}

.announcement-title {
  font-size:30rpx;
  color:rgba(51,51,51,1);
  font-weight:bold;
  padding-top: 40rpx;
  padding-bottom: 30rpx;
}

.announcement-content {
  width: 100%;
  font-size:24rpx;
  color:rgba(51,51,51,1);
  font-weight:400;
}