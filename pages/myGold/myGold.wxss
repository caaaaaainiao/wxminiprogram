/* pages/myGold.wxss */
.container {
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
}

.bannerbg {
  width: 100%;
  height: 430rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.allGold{
  z-index: 9;
  font-size:48rpx;
  color:rgba(255,255,255,1);
  position: absolute;
  left: 82rpx;
  top: 39rpx;
}

.yellow-mask{
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  right: 76rpx;
  top: 50rpx;
}

.overdue{
  font-size:22rpx;
  color: rgba(255,255,255,1);
  position: absolute;
  top: 210rpx;
  left: 120rpx;
}

.overdue>image{
  width: 20rpx;
  height: 20rpx;
  position: relative;
  top: -5rpx;
}

.banner-body{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 400rpx;
}

.gold-detail{
  width:690rpx;
  background:rgba(255,255,255,1);
  box-shadow:0rpx -8rpx 16rpx 0rpx rgba(0,159,255,0.6);
  border-radius:16rpx 16rpx 0rpx 0rpx;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translate(-50%);
}

.detail-top{
  width: 100%;
  height: 100rpx;
  position: relative;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-bottom: 1px solid rgba(204,204,204,1);
}

.see{
  height: 100%;
  line-height: 100rpx;
}

.see-border{
  border-bottom: 6rpx solid rgba(236,47,75,1);
}

.detail-content{
  height: 850rpx;
  width: 100%;
  position: relative;
  padding: 0rpx 30rpx;
}

.detail-list{
  width: 100%;
  height: 145rpx;
  position: relative;
  border-bottom: 1rpx solid rgba(223,219,219,1);
}

.use-integral{
  position: absolute;
  left: 11rpx;
  top: 30rpx;
  font-size:26rpx;
  color:rgba(43,43,43,1);
}

.use-time{
  font-size:22rpx;
  color:rgba(136,136,136,1);
  position: absolute;
  bottom: 20rpx;
  left: 11rpx;
}

.get-goldNum{
  color:rgba(236,47,75,1);
  font-size: 37rpx;
  position: absolute;
  display: flex;
  align-items: center;
  right: 5rpx;
  bottom: 45rpx;
}