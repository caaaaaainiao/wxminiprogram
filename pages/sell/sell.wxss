/* pages/sell/sell.wxss */
.container{
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
  /* background: red; */
}
.bannerbg{
  width: 100%;
  height: 470rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.content{
  width: 100%;
  height: 100%;
  padding-top: 80rpx;
  /* padding-bottom: 98rpx; */
  position: absolute;
  top: 0;
  left: 0;
  box-sizing:border-box;
}
.bottom{
  width: 100%;
  height: 100%;
  border-radius:16rpx 16rpx 0 0;
  background: #fff; 
  position: relative;
  /* padding-bottom: 98rpx; */
}
.userimage{
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  top: 23rpx;
  left: 315rpx;
  background: #fff;
  padding: 6rpx;
  border-radius: 50%;
  z-index: 9;
}
.userimage image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.messages{
  width: 670rpx;
  height: 170rpx;
  border-bottom: 1rpx solid #DCDCDC;
  margin: 0 auto 70rpx;
}
.leftBlock,.rightBlock{
  width: 220rpx;
  height: 100%;
  position: relative;
  float: left;
}
.middleBlock{
  width: 230rpx;
  height: 100%;
  line-height: 220rpx;
  position: relative;
  float: left;
  text-align: center;
  font-size: 26rpx;
  color: #312927;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.title{
  width: 100%;
  line-height: 1;
  font-size: 24rpx;
  color: #312927;
  text-align: center;
  position: absolute;
  left: 0;
  top: 47rpx;
}
.number{
  width: 100%;
  line-height: 1;
  font-size: 40rpx;
  color: #312927;
  text-align: center;
  font-weight: bold;
  position: absolute;
  left: 0;
  top: 89rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.location{
  text-align: center;
  font-size: 34rpx;
  color: #312927;
  font-weight: bold;
  line-height: 1;
  margin-bottom: 15rpx;
}
.resetLocation{
  height: 40rpx;
  line-height: 40rpx;
  font-size: 22rpx;
  color: #DA4E7B;
  text-align: center;
  margin-bottom: 85rpx;
}
.resetLocation image{
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  vertical-align: middle;
  margin-left: 5rpx;
}
.foodtype{
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
  color: #312927;
  margin-bottom: 45rpx;
}
.types{
  width: 100%;
  padding-left: 70rpx;
  padding-right: 70rpx;
  overflow: hidden;
  margin-bottom: 50rpx;
}
.foodtype1{
  width: 260rpx;
  float: left;
}
.foodtype2{
  width: 260rpx;
  float: right;
}
.type{
  width: 260rpx;
  height: 196rpx;
  vertical-align: bottom;
}
.typetext{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  color: #312927;
  text-align: center;
  margin-bottom: 15rpx;
}
.selectarea{
  width: 30rpx;
  height: 30rpx;
  border: 1rpx solid #DA4E7B;
  border-radius: 50%;
  margin: auto;
  position: relative;
}
.selectarea image{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: -5rpx;
  bottom: -5rpx;
}
.orderbtn{
  width: 631rpx;
  height: 119rpx;
  position: absolute;
  left: 50%;
  transform: translate(-50%);
}
.foodMessage{
  font-size: 26rpx;
  color: #312927;
  text-align: center;
  font-weight: bold;
  margin-bottom: 30rpx;
}
.foodMessage text{
  font-size: 20rpx;
  color: #888888;
  margin-left: 27rpx;
  font-weight: normal;
}
.gray{
  filter: grayscale(100%);
}
/* 选择列表 */
.checkplace{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 9;
  background: rgba(0,0,0,.7);
}
.checkcontent{
  width: 100%;
  height: auto;
  padding-top: 99rpx;
  border-radius: 16rpx 16rpx 0 0;
  background: #fff;
  position: absolute;
  left: 0;
  bottom: 0;
}
.check_icon{
  width: 160rpx;
  height: 160rpx;
  position: absolute;
  top: -80rpx;
  left: 295rpx;
}
.close{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 15rpx;
  right: 16rpx;
}
.checktext{
  font-size: 30rpx;
  color: #312927;
  text-align: center;
  font-weight: bold;
  line-height: 1;
  margin-bottom: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.checktext text{
  color: #AAAAAA;
  font-weight: normal;
}
.checkbox{
  width: 100%;
  border-top: 1rpx solid #DDDDDD;
}
.checkoptions{
 padding-left: 60rpx;
 padding-right: 10rpx;
 margin-bottom: 25rpx;
 overflow: auto;
 max-height: 40vh;
}
.option{
  width: auto;
  height: 60rpx;
  padding: 0 25rpx;
  border: 1rpx solid #E5E5E5;
  color: #AAAAAA;
  font-size: 24rpx;
  display: inline-block;
  border-radius: 30rpx;
  line-height: 60rpx;
  margin-right: 50rpx;
  margin-bottom: 50rpx;
  margin-top: 50rpx;
  /* float: left; */
}

.back{
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(236,47,75,1);
  line-height:30rpx;
  position: absolute;
  top: 15rpx;
  left: 25rpx;
}

.checkedoption{
  background: #DA4E7B;
  border: none;
  color: #fff;
}
.checkTip{
  width: 100%;
  padding: 0 82rpx;
  font-size: 24rpx;
  color: #DA4E7B;
  line-height: 36rpx;
  margin-bottom: 26rpx;
}
.checkover{
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  background: #DDDDDD;
  text-align: center;
  font-size: 30rpx;
  color: #AAAAAA;
}
.checkall{
  background:linear-gradient(-84deg,rgba(0,159,255,1),rgba(236,47,75,1));
  color: #fff;
}

.check-point{
  width: 100%;
  padding: 0 250rpx;
  font-size: 18rpx;
  color:rgba(255,255,255,1);
  line-height:30rpx;
  margin-bottom: 50rpx;
  display: flex;
  justify-content: space-around;
}

.round{
  width:24rpx;
  height:24rpx;
  background:rgba(221,221,221,1);
  border-radius:50%;
  text-align: center;
}

.select{
  background:rgba(236,47,75,1);
}

.checkSeat {
  width: 100%;
  height: 720rpx;
  background: #fff;
  position: absolute;
  left: 0;
  bottom: 0;
  border-radius:20rpx 20rpx 0rpx 0rpx;
}

.check-head {
  width:100%;
  height:80rpx;
  background:rgba(0,159,255,1);
  line-height: 80rpx;
  text-align: center;
  color:rgba(255,255,255,1);
  font-family:Source Han Sans CN;
  font-size:32rpx;
  border-radius:20rpx 20rpx 0rpx 0rpx;
}

.closeSeat {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: -90rpx;
  right: 30rpx;
}

.check-content {
  width: 100%;
  height: 640rpx;
  padding:0 75rpx;
}

.noSeat {
  color:rgba(236,47,75,1);
  font-size:24rpx;
  width: 100%;
  height: 182rpx;
  text-align: center;
  line-height: 182rpx;
  font-family:Source Han Sans CN;
  font-weight:500;
}

.check-screen {
  width:600rpx;
  height:80rpx;
  background:rgba(255,255,255,1);
  border:1rpx solid rgba(236,47,75,1);
  border-radius:16rpx;
  position: relative;
}

.check-screen-img {
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  left: 35rpx;
  top: 50%;
  transform: translate(-50%,-50%);
}

.checkNowScreen {
  width: 600rpx;
  height:80rpx;
  padding-left: 76rpx;
  color:rgba(170,170,170,1);
  font-size:30rpx;
  line-height:80rpx;
}

.check-seat {
  width:600rpx;
  height:80rpx;
  background:rgba(255,255,255,1);
  border:1rpx solid rgba(236,47,75,1);
  border-radius:16rpx;
  position: relative;
  margin-top: 40rpx;
}

.sureSeat {
  color:rgba(236,47,75,1);
  font-size:24rpx;
  width: 100%;
  height: 138rpx;
  text-align: center;
  line-height: 138rpx;
  font-family:Source Han Sans CN;
  font-weight:500;
}
.checkSure {
  width:600rpx;
  height:80rpx;
  background:linear-gradient(-84deg,rgba(0,159,255,1),rgba(236,47,75,1));
  border-radius:40rpx;
  line-height: 80rpx;
  text-align: center;
  color: white;
}

.check-info {
  width: 100%;
  height: 80rpx;
  text-align: center;
  font-size:30rpx;
  font-family:Source Han Sans CN;
  font-weight:500;
  color:rgba(43,43,43,1);
}

.otherSeat {
  font-size:24rpx;
  font-weight:400;
  color:rgba(0,159,255,1);
  text-align: right;
  margin-top: 30rpx;
}

.choose-check-seat {
  width: 100%;
  margin-top: 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.choose-check-seat-detail {
  width: 100%;
  position: relative;
  height: 70rpx;
}

.checkStatus {
  width:40rpx;
  height:40rpx;
  background:rgba(255,255,255,1);
  border:2rpx solid rgba(204,204,204,1);
  border-radius:50%;
}

.checkImg {
  width: 50rpx;
  height: 50rpx;
  float: right;
}

.sureSeat2 {
  color: rgba(236,47,75,1);
  font-size: 24rpx;
  width: 100%;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
}
