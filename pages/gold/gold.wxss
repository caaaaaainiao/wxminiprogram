/* gold.wxss */
.container{
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  position: relative;
  overflow: auto;
}

.top{
  width: 750rpx;
  height: 360rpx;
  position: relative;
  left: 50%;
  transform: translate(-50%);
}

.top .bg{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.gold{
  width: 100%;
  height: 80rpx;
  position: relative;
}

.ellipse{
  width: 100%;
  height: 100rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.my-gold{
  position: absolute;
  height: 48rpx;
  left: 50%;
  transform: translate(-50%);
  top: 20%;
  color: black;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.gold-img{
  width: 30rpx;
  height: 30rpx; 
}

.turn{
  width: 11rpx;
  height: 19rpx;
}

.activy{
  width: 100%;
  height: 180rpx;
  position: relative;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.activy view{
  width: 124rpx;
  height: 145rpx;
  text-align: center;
  font-size: 10px;
}

.activy image{
  width:124rpx;
  height:124rpx;
}

.content{
  position: relative;
  width: 100%;
}

.content-data{
  width: 710rpx;
  margin-left: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}

.item{
  width: 345rpx;
  margin-bottom: 20rpx;
  background:rgba(255,255,255,1);
  border:1px solid rgba(224,224,224,1);
  box-shadow:0px 0px 12rpx 0px rgba(0, 0, 0, 0.05);
  border-radius:16rpx;
  display: inline-block;
  margin-right: 10rpx;
}

.item-details{
  height: 480rpx;
  margin: 12rpx 13rpx;
  position: relative;
}

.item-img{
   width:320rpx;
   height:320rpx;
   position: relative;
}

.item-name{
  width: 303rpx;
  font-size: 13px;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(49,41,39,1);
  overflow: hidden;
  line-height: 30rpx;
  position: relative;
  left: 20rpx;
  top: 17rpx;
  text-overflow: ellipsis; 
  display: -webkit-box;
  -webkit-line-clamp: 2; 
  -webkit-box-orient: vertical;
}

.item-price{
  font-size: 10px;
  text-align: left;
  width: 270rpx;
  line-height: 32rpx;
  position: relative;
  left: 23rpx;
  top: 30rpx;
}

.item-price>view{
  float: left;
  color: #DA4E7B;
  font-size: 13px;
}

.item-gold-img{
  width: 22rpx;
  height: 22rpx;
  position: relative;
  bottom: 5rpx;
  right: 4rpx;
}

.old-price{
  position: absolute;
  font-size:11px;
  font-family:PingFang SC;
  font-weight:400;
  text-decoration:line-through;
  color:rgba(147,140,144,1);
  line-height:30rpx;
  bottom: 13rpx;
  right: 20rpx;
}

.item-btn{
  position: absolute;
  width:320rpx;
  height:50rpx;
  background:rgba(228,106,124,1);
  border-radius:10px;
  text-align: center;
  bottom: 13rpx;
  color:rgba(255,255,255,1);
  font-size:12px;
  line-height: 50rpx;
}

.recommend{
  position: relative;
  width: 100%;
  margin-bottom: 30rpx;
}

.banner-bg{
  width: 100%;
}

.recommend-title{
  text-align: center;
  font-size: 16px;
  margin-top: 20rpx;
}

.recommend-title image{
  width: 462rpx;
  height: 19rpx;
  position: absolute;
  left: 144rpx;
  top: 20rpx;
}

.recommend-title text{
  line-height: 56rpx;
}

.recommend-open{
  width: 670rpx;
  height: 200rpx;
  border-radius:12px;
  position: relative;
  left: 40rpx;
  margin-top: 45rpx;
  margin-bottom: 40rpx;
}

.recommend-banner{
  position: relative;
  top: 20rpx;
  height: 326rpx;
  width: 100%;
  display: flex;
  overflow-x: auto; 
}

.recommend-banner-content{
  width: 240rpx;
  height: 320rpx;
  flex-shrink:0;
  margin-left: 40rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}

.recommend-banner-img {
  width: 240rpx;
  height: 240rpx;
  border-radius: 12rpx;
}

.recommend-banner-name{
  font-size: 22rpx;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis; 
  white-space: nowrap;
}

.recommend-banner-price{
  color:rgba(236,47,75,1);
  font-size:24rpx;
}

.gold-price {
  width: 18rpx;
  height: 18rpx;
  position: relative;
  bottom: 6rpx;
}