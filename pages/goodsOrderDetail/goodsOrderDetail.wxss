/* pages/foodOrderDetail/foodOrderDetail.wxss */
/* pages/orderDetail/orderDetail.wxss */
#container{
  width: 100%;
  height: 100%;
  position: relative;
  /* background: #DA4E7B; */
}

.bg{
  width: 100%;
  height: 2270rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.content{
  width: 100%;
  overflow: auto;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 9;
  background: linear-gradient(to top, #da4e7b, #2177b9);
}

.goods-information{
  width: 710rpx;
  background: #fff;
  border-radius: 16rpx 16rpx 0 0;
  margin: auto;
  position: relative;
  color: #322D2B;
}

.information-img{
  width: 300rpx;
  height: 300rpx;
  position: relative;
  left: 50%;
  transform: translate(-50%);
}

.information-name{
  font-size: 26rpx;
  color: #878787;
}

.information-num{
  font-size: 26rpx;
  color: #878787;
  position: absolute;
  bottom: 0;
  left: 600rpx;
}

.getbtn{
  position: relative;
  margin-top: 50rpx;
}

.text{
  position: absolute;
  z-index: 999;
  font-size: 37rpx;
  color: white;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  letter-spacing: 10rpx;
}

.orderbtn{
  width: 530rpx;
  height: 80rpx;
  margin: 0 auto;
}

.gray{
  filter: grayscale(100%);
}

.information-tips{
  color: #DA4E7B;
  font-size: 24rpx;
  text-align: center;
}

.line{
  width: 710rpx;
  height: 34rpx;
  margin-left: 20rpx;
  display: block;
}

.other{
  width: 710rpx;
  background: #fff;
  padding-bottom: 20rpx;
  margin: 0 auto 20rpx;
  border-radius: 0 0 16rpx 16rpx;
}

.address{
  width: 630rpx;
  padding: 50rpx 0 40rpx; 
  position: relative;
  margin: auto;
  border-bottom: 1rpx solid #DCDCDC;
}

.storename{
  font-size: 36rpx;
  line-height: 1;
  margin-bottom: 30rpx;
  position: relative;
  width: 500rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.storename1{
  font-size: 36rpx;
  line-height: 1;
  margin-bottom: 30rpx;
  position: relative;
}

.storeaddress{
  width: 550rpx;
  font-size: 26rpx;
  color: #878787;
  line-height: 30rpx;
}

.phone{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: 75rpx;
  right: 0;
}

.money{
  font-size: 36rpx;
  color: #878787;
  font-weight: bold;
  position: absolute;
  right: 0;
}

.descripe{
  font-size: 26rpx;
  color: #878787;
  line-height: 52rpx;
}

.mask{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.5);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}

.use-container{
  width:540rpx;
  height:360rpx;
  background:rgba(254,254,254,1);
  border-radius:20rpx;
  position: absolute;
  left: 107rpx;
  top: 356rpx;
}

.use-close{
  width:36rpx;
  height:36rpx;
  position: absolute;
  top: 280rpx;
  right: 100rpx;
}

.use-close>image{
  width: 100%;
  height: 100%;
}

.use-title{
  font-size:26rpx;
  font-weight:400;
  color:rgba(43,43,43,1);
  position: absolute;
  width: 100%;
  text-align: center;
  top: 60rpx;
}

.use-inp{
  width:400rpx;
  height:80rpx;
  background:rgba(239,239,239,1);
  border-radius:10rpx;
  position: absolute;
  left: 68rpx;
  top: 135rpx;
  font-size:26rpx;
  color:rgba(136,136,136,1);
  text-align: center;
}

.use-btn{
  width:150rpx;
  height:60rpx;
  background:rgba(236,47,75,1);
  border-radius:30rpx;
  color:rgba(255,255,255,1);
  font-size:24rpx;
  text-align: center;
  line-height: 60rpx;
  position: absolute;
  left: 50%;
  bottom: 38rpx;
  transform: translate(-50%);
}