/* pages/myprize/myprize.wxss */
.container{
  width: 100%;
  height: 100%;
  background: #f2f2f2;
  position: relative;
}

.prize{
  width:750rpx;
  height:240rpx;
  background:#fff;
  border:1px solid #ddd;
  position: relative;
  margin-bottom: 30rpx;
}
.icon{
  width: 160rpx;
  height: 160rpx;
  position: absolute;
  top: 40rpx;
  left: 40rpx;
}
.name{
  width: 310rpx;
  font-size: 32rpx;
  font-weight: bold;
  position: absolute;
  left: 230rpx;
  top: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis; 
  white-space: nowrap;
}
.scope{
  width: 310rpx;
  line-height: 1;
  font-size: 24rpx;
  color: #888888;
  position: absolute;
  left: 230rpx;
  top: 112rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.time{
  /* width: 310rpx; */
  line-height: 1;
  font-size: 24rpx;
  color: #888888;
  position: absolute;
  left: 230rpx;
  top: 165rpx;
}
.right{
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  right: 0;
  top: 20rpx;
  color: #E04F2E;
  border-left: 1rpx solid #DDDDDD;
}
.status{
  width: 118rpx;
  height: 57rpx;
  position: absolute;
  right:32rpx;
  bottom: 73rpx;
  z-index: 9;
}
/* 弹出层 */
.white{
  width: 100%;
  height: 100%;
  background: rgba(255,255,255,.5);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9;
}
.charge{
  width:535rpx;
  height:290rpx;
  background:rgba(107,107,117,1);
  border-radius:20rpx;
  position: absolute;
  top: 50%;
  margin-top: -200rpx;
  left: 107rpx;
  font-size: 26rpx;
  color: #fff;
  line-height: 44rpx;
  text-indent: 1em;
  padding: 30rpx 40rpx;
}
.chargebtn{
  width: 150rpx;
  height: 60rpx;
  background-size: cover;
  position: absolute;
  left: 192rpx;
  bottom: 30rpx;
}
.close{
  width: 48rpx;
  height: 121rpx;
  background-size: cover;
  position: absolute;
  right: 5rpx;
  bottom: -121rpx;
}
.empty{
  width: 100%;
  height: 100%;
  background: #fff;
  position: relative;
  overflow: hidden;
  padding-top: 230rpx;
}
.empty image{
  width: 342rpx;
  height: 255rpx;
  margin: 0 auto 70rpx;
  display: block;
}
.emptytext{
  width: 100%;
  font-size: 30rpx;
  color:#888888;
  text-align: center;
  line-height: 1;
}
.closePrize{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: -15rpx;
  top: -65rpx
}
.hexiao{
  width: 120rpx;
  height: 57rpx;
  position: absolute;
  right:10rpx;
  bottom: 5rpx;
  z-index: 9;
}
.back{
  width: 150rpx;
  height: 50rpx;
}


.mask{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.5);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}

.use-container{
  width:540rpx;
  height:360rpx;
  background:rgba(254,254,254,1);
  border-radius:20rpx;
  position: absolute;
  left: 107rpx;
  top: 356rpx;
}

.use-close{
  width:36rpx;
  height:36rpx;
  position: absolute;
  top: 280rpx;
  right: 100rpx;
}

.use-close>image{
  width: 100%;
  height: 100%;
}

.use-title{
  font-size:26rpx;
  font-weight:400;
  color:rgba(43,43,43,1);
  position: absolute;
  width: 100%;
  text-align: center;
  top: 60rpx;
}

.use-inp{
  width:400rpx;
  height:80rpx;
  background:rgba(239,239,239,1);
  border-radius:10rpx;
  position: absolute;
  left: 68rpx;
  top: 135rpx;
  font-size:26rpx;
  color:rgba(136,136,136,1);
  text-align: center;
}

.use-btn{
  width:150rpx;
  height:60rpx;
  background:rgba(236,47,75,1);
  border-radius:30rpx;
  color:rgba(255,255,255,1);
  font-size:24rpx;
  text-align: center;
  line-height: 60rpx;
  position: absolute;
  left: 50%;
  bottom: 38rpx;
  transform: translate(-50%);
}

.delivery {
  width: 310rpx;
  font-size: 32rpx;
  font-weight: bold;
  position: absolute;
  left: 230rpx;
  top: 58rpx;
  overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}

.line {
  width:710rpx;
  height:1rpx;
  border:1rpx solid rgba(221,221,221,1);
  position: absolute;
  top: 240rpx;
  margin-left: 20rpx;
}

.height {
  height: auto;
}

.bottom {
  width: 710rpx;
  margin-top: 240rpx;
  margin-left: 20rpx;
  color: #888;
  font-size:22rpx;
  border-top: 1rpx solid rgba(221,221,221,1);
}

.delivery-info {
  width: 100%;
  padding: 18rpx 20rpx 0 20rpx;
  overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
  margin-bottom: 10rpx;
}

.logistics {
  width:120rpx;
  height:40rpx;
  background:rgba(255,255,255,1);
  border:1rpx solid rgba(236,47,75,1);
  border-radius:20rpx;
  text-align: center;
  line-height: 40rpx;
  color: rgba(236,47,75,1);
  margin-left: 570rpx;
  margin-bottom: 10rpx;
}
