/* pages/poster.wxss */
.container {
  width: 100%;
  height: 100%;
  position: relative;
  background: linear-gradient(to top, #da4e7b, #2177b9);
}

.content {
  width: 100%;
  overflow: auto;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 9;
}

.poster,.poster2,.poster3 {
  width: 670rpx;
  height: 900rpx;
  position: relative;
  margin: 110rpx auto;
  box-shadow:1rpx 0px 25rpx 4rpx rgba(141,24,50,0.44);
  border-radius:20rpx;
  background:rgba(255,255,255,1);
}

.poster-img {
  width:670rpx;
  height:400rpx;
  border-radius:20rpx 20rpx 0px 0px;
}

.poster-content {
  padding: 0 20rpx;
  height: 500rpx;
  width: 100%;
}

.poster-head {
  height: 40rpx;
  line-height: 40rpx;
  padding-top: 35rpx;
  margin-bottom: 80rpx;
}

.poster-title {
  float: left;
  font-size: 34rpx;
}

.starList {
  display: flex;
  justify-content: space-around;
  align-items: center;
  float: right;
  width: 240rpx;
}

.star-image {
  width: 30rpx;
  height: 30rpx;
  position: relative;
}

.score {
  display: flex;
  justify-content: space-around;
  align-items: center;
  color: #313131;
  font-size:24rpx;
}

.poster-body {
  width: 100%;
  font-size: 24rpx;
  color: #888;
  overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 5;
	-webkit-box-orient: vertical;
  margin-bottom: 110rpx;
}

.poster-foot {
  height: 160rpx;
  width: 100%;
}

.poster-foot-info {
  height: 130rpx;
  width: 100%;
}

.poster-code {
  width: 128rpx;
  height: 128rpx;
  float: left;
}

.poster-user {
  float: right;
  width: 200rpx;
}

.poster-userInfo {
  display: flex;
  align-items: center;
  width: 200rpx;
  justify-content: space-around;
  margin-bottom: 50rpx;
}

.poster-userInfo-img {
  width: 44rpx;
  height: 44rpx;
}

.poster-userInfo-name {
  color: #888;
  font-size: 24rpx;
  width: 150rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.poster-user-time {
  color: #888;
  font-size: 20rpx;
  text-align: center;
}

.poster-foot-cinemaName {
  color: #888;
  font-size: 20rpx;
  position: absolute;
  bottom: 10rpx;
  left: 50%;
  transform: translate(-50%,-50%)
}

.forwarding {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  background:rgba(1,1,1,1);
  opacity:0.9;
  display: flex;
}

.left,.right {
  width: 50%;
  height: 100%;
  color: #fff;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.left-img,.right-img{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.poster2-head {
  padding-top: 35rpx;
  padding-left: 35rpx;
  padding-right: 60rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.poster2-img {
  width: 320rpx;
  height: 480rpx;
}

.poster2-user {
  height: 200rpx;
  text-align: center;
}

.poster2-user-img,.poster3-user-img {
  width: 44rpx;
  height: 44rpx;
}

.poster2-userInfo,.poster3-userInfo {
  display: flex;
  align-items: flex-start;
  margin-top: 20rpx;
  height: 100%;
}

.poster2-userInfo-name,.poster3-userInfo-name {
  writing-mode: vertical-rl;
  color: #888;
  font-size: 24rpx;
  overflow: hidden;
}

.poster2-userInfo-time,.poster3-userInfo-time {
  color: #888;
  font-size: 20rpx;
  writing-mode: vertical-rl;
  overflow: hidden;
}

.poster2-name {
  writing-mode:vertical-rl;
  font-size: 42rpx;
  overflow: hidden;
  height: 350rpx;
}

.starList2 {
  display: flex;
  justify-content: space-around;
  align-items: center;
  float: left;
  width: 240rpx;
  margin-left: 75rpx;
  margin-top: 30rpx;
  margin-bottom: 35rpx;
}

.star2-image {
  width: 30rpx;
  height: 30rpx;
  position: relative;
}

.poster2-code {
  width: 128rpx;
  height: 128rpx;
  position: absolute;
  right: 60rpx;
  top: 430rpx;
}

.poster2-body {
  width: 100%;
  font-size: 24rpx;
  color: #888;
  overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 5;
	-webkit-box-orient: vertical;
  margin-bottom: 90rpx;
  padding: 0 50rpx;
}

.poster2-cinemaName {
  color: #888;
  font-size: 20rpx;
  position: absolute;
  bottom: 30rpx;
  left: 50%;
  transform: translate(-50%,-50%);
}

.poster3-head {
  height: 400rpx;
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: relative;
  top: 45rpx;
}

.poster3-cinemaName {
  color: #888;
  font-size: 20rpx;
  overflow: hidden;
  writing-mode: vertical-rl;
  height: 400rpx;
}

.poster3-img {
  width:400rpx;
  height:400rpx;
  border-radius:190rpx 190rpx 200rpx 200rpx;
}

.poster3-name {
  writing-mode:vertical-rl;
  font-size: 42rpx;
  overflow: hidden;
  height: 400rpx;
}

.poster3-content {
  width: 100%;
  height: 300rpx;
  padding: 0 20rpx;
  position: relative;
  top: 100rpx;
}

.poster3-user {
  height: 200rpx;
  text-align: center;
  width: 60rpx;
}

.poster3-body {
  font-size: 24rpx;
  color: #888;
  overflow: hidden;
  writing-mode:vertical-rl;
  position: absolute;
}

.starList3 {
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-direction: column;
  position: absolute;
  right: 20rpx;
  top: 0;
  height: 280rpx;
}

.star3-image {
  width: 30rpx;
  height: 30rpx;
  position: relative;
}

.poster3-code {
  width:128rpx;
  height:128rpx;
  position: absolute;
  bottom: -60rpx;
  left: 50rpx;
}

.black{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.5);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9;
}

.change{
  width: 100%;
  height: 360rpx;
  background: #fff;
  border-radius: 16rpx 16rpx 0 0;
  position: absolute;
  left: 0;
  bottom: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.mode1,.mode2,.mode3 {
  height: 320rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.mode1-img,.mode2-img,.mode3-img {
  width: 180rpx;
  height: 240rpx;
}

.choose-btn {
  width:30rpx;
  height:30rpx;
  background:rgba(255,255,255,1);
  border:2rpx solid rgba(214,214,214,1);
  border-radius:50%;
}

.change-btn {
  width: 100%;
  height: 100rpx;
  background:rgba(0,159,255,1);
  text-align: center;
  position: absolute;
  bottom: 0;
  line-height: 100rpx;
  color: #fff;
}

.sh {
  width: 670rpx;
  height: 900rpx;
}